#!/bin/sh
# $Id: automake-ify,v 1.3 2006/08/14 20:59:42 friedman Exp $

run()
{
  echo ${PS4-+} ${1+"$@"} 1>&2
  ${1+"$@"} || exit $?
}

run aclocal -I m4

if [ -d po ]; then
  run glib-gettextize --force --copy
fi

run autoheader

if [ -f Makefile.am ]; then
  run automake --add-missing --copy
fi

run autoconf
