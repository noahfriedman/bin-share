#!/bin/sh
# $Id: rsync-mirror,v 1.2 2006/09/18 23:28:59 friedman Exp $

RSYNC_RSH=${RSYNC_RSH-rsh}
export RSYNC_RSH

case $* in
  *-quiet* ) : ;;
  *          ) set x --verbose ${1+"$@"} ; shift ;;
esac

case $* in
  *-inplace* ) : ;;
  *          ) set x --sparse ${1+"$@"} ; shift ;;
esac

case ${UID-`id -u`} in
  0 ) set x --devices ${1+"$@"} ; shift ;;
esac

set x \
	--owner		\
	--group		\
	--perms		\
	--times		\
			\
	--hard-links	\
	--links		\
			\
	--delete	\
	--force		\
			\
	--recursive	\
	${1+"$@"}
shift

exec ${RSYNC-rsync} ${1+"$@"}

# eof
