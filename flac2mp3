#!/bin/sh
# $Id: flac2mp3,v 1.6 2014/06/09 05:18:04 friedman Exp $

decode_flac()
{
  flac --silent --force --decode "$@"
}

encode_mp3()
{
  set x --nohist -h -p --preset standard --vbr-new "$@"
  shift
  if ! [ -t 1 ]; then set x --silent; shift; fi

  lame "$@"
}

tag_mp3()
{
  flac=$1
  flacdir=`dirname "$flac"`
  mp3=$2

  eval set fnord \
      `metaflac --export-tags-to=- "$flac" \
           | sed -e 'h
                     s/^[^=]*=//
                     s/^/"/
                     s/$/"/
                     x
                     s/=.*//
                     y/ABCDEFGHIJKLMNOPQRSTUVWXYZ/abcdefghijklmnopqrstuvwxyz/
                            /^date$/s//year/
                     /^tracknumber$/s//track/
                      /^tracktotal$/s//track-total/
                      /^discnumber$/s//disc/
                       /^disctotal$/s//disc-total/
                     s/^/--/
                     G
                     s/\n/=/
                     /^--comment/s/=/=::/
                    '`

  for apic in FRONT_COVER BACK_COVER LEAFLET OTHER ; do
      if [ -f "$flacdir/$apic.JPG" ]; then
          set "$@" --add-image="$flacdir/$apic.JPG:$apic"
      fi
  done
  shift

  eyeD3 \
      --no-tagging-time-frame \
      --set-encoding utf16-LE \
      --to-v2.3 \
      "$@" \
      "$mp3"

  touch -r "$flac" "$mp3"
}

flac_to_mp3()
{
  flac=$1
  base=`basename "$flac" .flac`
  wav=/tmp/_flac2mp3_$$.wav
  mp3=$base.mp3

  decode_flac -o "$wav" "$flac" &&
  encode_mp3 "$wav" "$mp3"
  rm -f "$wav"
  tag_mp3 "$flac" "$mp3"
}

main()
{
  for f in "$@"; do
    echo "$f"
    flac_to_mp3 "$f"
    echo
  done
}

main "$@"

# eof
