#!/bin/sh
# $Id: ssh-add-all,v 1.2 2002/07/18 07:44:20 friedman Exp $

ssh1keys='
  friedman@splode.com
  friedman@inktomi.com
  noahf@yahoo-inc.com
  friedman@mozilla.org
'

openssh_dsakeys='
  friedman@splode.com
  friedman@inktomi.com
  noahf@yahoo-inc.com
  friedman@mozilla.org
'

for key in $ssh1keys; do
  ssh-add $HOME/etc/certs/ssh1/$key/identity
done

cd $HOME/etc/certs/openssh
for key in $openssh_dsakeys; do
  ssh-add $key/id_dsa
done

# eof
