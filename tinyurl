#!/usr/bin/env perl
# $Id$

$^W = 1; # enable warnings

use LWP;
use URI;
use strict;

sub http_get
{
  my ($url) = @_;

  my $request = HTTP::Request->new ('GET');
  my $ua      = LWP::UserAgent->new;
  my $uri     = URI->new ($url);
  $request->url ($uri);
  my $response = $ua->request ($request);
  return $response->content;
}

sub main
{
  my $u = "http://tinyurl.com/api-create.php?url=";
  map { print http_get ($u . $_), "\n" } @_;
}

main (@ARGV);

# eof
