#! /bin/sh
# $Id: untar,v 1.12 2007/02/18 05:50:02 friedman Exp $

for f in ${1+"$@"}; do
  case "$f" in
    *.t[ag]z | *.tar.gz | *.tar.[Zz] | *.xtar.gz | *.xtar.[Zz] | *.nif )
      ${GZIP-gzip} -dc "$f" | ${TAR-tar} -xpvf -
     ;;

    *.tbz | *.tbz2 | *.tar.bz2 | *.xtar.bz2 | *.tar.bz | *.cbt )
      ${BZIP2-bzip2} -dc "$f" | ${TAR-tar} -xpvf -
     ;;

    *.tar | *.xtar )
      ${TAR-tar} -xpvf "$f"
     ;;

    *.zip | *.jar | *.cbz | *.fbu )
      ${UNZIP-unzip} -o "$f"
     ;;

    *.rpm )
      ${RPM2CPIO-rpm2cpio} "$f" | ${CPIO-cpio} -dimv --no-absolute-filenames
     ;;

    *.lzh )
      ${LHA-lha} x "$f"
     ;;

    *.rar | *.cbr )
      ${UNRAR-unrar} x "$f"
     ;;

    *.a )
      libdir=`basename "$f" .a`
      case "$f" in
        /* ) : ;;
        *  ) f=../$f ;;
      esac
      mkdir -p $libdir
      (cd $libdir && ${AR-ar} xv "$f")
     ;;
  esac
done

# eof
