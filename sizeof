#!/bin/sh
# sizeof -- print size of standard C types
# Author: Noah Friedman <friedman@splode.com>
# Created: 2007-03-23
# Public domain.

# $Id: sizeof,v 1.1 2008/01/16 19:30:19 friedman Exp $

# Commentary:
# Code:

cd ${TMPDIR-/tmp} || exit 1

file="sizeof$$"
trap 'rm -f $file $file.[co]' 0 1 2 3 15

cat > $file.c <<__EOF__
  #include <stdio.h>
  #include <sys/types.h>

  int main ()
  {
    printf ("%ld\n", sizeof ($*));
    return 0;
  }
__EOF__

${CC-cc} $CFLAGS $file.c -o $file && ./$file

# eof
