#! /bin/sh

# $Id: wsnarf,v 1.4 2002/07/29 07:37:40 friedman Exp $

#user_agent='User-Agent: Mozilla/4.04 [en] (X11; I; Linux 2.0.33 i586)'
#user_agent='User-Agent: Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.0.0) Gecko/20020529'
user_agent='Mozilla/5.0 (X11; U; Linux i686; en-US; rv:1.7.5) Gecko/20041107 Mozilla/1.2'

exec wget \
  --user-agent="$user_agent" \
  \
  --convert-links \
  --force-html \
  --server-response \
  --timestamping \
  --wait=0 \
  --tries=0 \
  --waitretry=85 \
  \
  --no-parent \
  --recursive \
  --level=0 \
  --execute 'robots = off' \
  \
  --passive-ftp \
  --follow-ftp \
  \
  --verbose \
  \
  ${1+"$@"}

# wsnarf ends here
