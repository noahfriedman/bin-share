#! /bin/sh

# $Id: fancy-xearth,v 1.1 1996/03/05 22:03:26 friedman Exp friedman $

exec with --display ${DISPLAY-:0.0} \
          --no-tty \
          --priority=19  \
          xearth -nolabel \
                 -stars \
                 -onepix \
                 -nomarkers \
                 -night 15 \
                 -wait 3600 \
                 -nice 19 \
                 -mag 0.25 \
                 -shift -250,-150 \
                 -pos sunrel,24.64,41.3 \
                 -gamma 2.6 \
                 -rot 21 \
                 -proj orthographic \
                 -bigstars 20

# eof
